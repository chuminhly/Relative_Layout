<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tView1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#FF0008"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:text="1"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
       />
    <TextView
        android:id="@+id/tView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/tView1"
        android:layout_below="@id/tView1"
        android:background="#FF9800"
        android:textSize="30dp"
        android:text="2"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/tView2"
        android:layout_toEndOf="@id/tView2"
        android:background="#1100FF"
        android:textSize="30dp"
        android:text="3"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/tView3"
        android:layout_toEndOf="@id/tView3"
        android:background="#F44336"
        android:textSize="30dp"
        android:text="4"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/tView4"
        android:layout_toStartOf="@id/tView4"
        android:background="#8BC34A"
        android:textSize="30dp"
        android:text="5"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView6"
        android:layout_width="100dp"
        android:layout_toStartOf="@id/tView5"
        android:layout_height="40dp"
        android:layout_below="@id/tView5"
        android:background="#E91E63"
        android:textSize="30dp"
        android:text="6"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView7"
        android:layout_width="100dp"
        android:layout_toStartOf="@id/tView6"
        android:layout_height="40dp"
        android:layout_below="@id/tView6"
        android:background="#009688"
        android:textSize="30dp"
        android:text="7"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
</RelativeLayout>