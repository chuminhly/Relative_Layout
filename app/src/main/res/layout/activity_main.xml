<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FF9800"
        android:textSize="30sp"
        android:text="View1"
        android:textColor="#F3F8F7"
       />

    <TextView
        android:id="@+id/tView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tView1"
        android:layout_below="@id/tView1"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:text="View2"
        android:textColor="#F3F8F7"
        />

    <TextView
        android:id="@+id/tView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#FF0048"
        android:textSize="30sp"
        android:text="View3"
        android:textColor="#F3F8F7"
        />

    <TextView
        android:id="@+id/tView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tView3"
        android:layout_below="@id/tView3"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:text="View2"
        android:textColor="#F3F8F7"
        />

    <TextView
        android:id="@+id/tView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true"
        android:background="#FF0048"
        android:textSize="30sp"
        android:text="View5"
        android:textColor="#F3F8F7"
        />

    <TextView
        android:id="@+id/tView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tView5"
        android:layout_above="@id/tView5"
        android:background="#FF9800"
        android:textSize="30sp"
        android:text="View2"
        android:textColor="#F3F8F7"
        />
</RelativeLayout>