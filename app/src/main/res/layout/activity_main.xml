<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tView1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="#FF0008"
        android:textSize="30dp"
        android:text="1"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
       />
    <TextView
        android:id="@+id/tView3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/tView1"
        android:layout_below="@id/tView1"
        android:background="#FF9800"
        android:textSize="30dp"
        android:text="3"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/tView1"
        android:layout_above="@id/tView1"
        android:background="#00BCD4"
        android:textSize="30dp"
        android:text="2"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/tView1"
        android:layout_above="@id/tView1"
        android:background="#2196F3"
        android:textSize="30dp"
        android:text="4"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/tView1"
        android:layout_below="@id/tView1"
        android:background="#4CAF50"
        android:textSize="30dp"
        android:text="5"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="#FFC107"
        android:textSize="30dp"
        android:text="6"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView7"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="#3F51B5"
        android:textSize="30dp"
        android:text="7"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView8"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#FFC107"
        android:textSize="30dp"
        android:text="8"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView9"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#9C27B0"
        android:textSize="30dp"
        android:text="7"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
</RelativeLayout>