<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0008"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        android:text="Top Content Here"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
       />
    <TextView
        android:id="@+id/tView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tView3"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:background="#FF9800"
        android:textSize="30dp"
        android:text="First"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1100FF"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:text="Second"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tView3"
        android:layout_marginStart="20dp"
        android:background="#F44336"
        android:textSize="30dp"
        android:text="Three"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />
    <TextView
        android:id="@+id/tView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#8BC34A"
        android:textSize="30dp"
        android:text="Button Context Here"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#F3F8F7"
        />

</RelativeLayout>